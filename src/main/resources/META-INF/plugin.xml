<idea-plugin>
    <id>Cloak</id>
    <name>Cloak</name>
    <version>${version}</version>
    <vendor>Fudge</vendor>
    <idea-version since-build="190.0" until-build="1000.*"/>

    <description>A cloak made of fabric</description>

    <change-notes>  <![CDATA[]]></change-notes>

    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="ClassNameProvider"/>
        <applicationService serviceImplementation="RenamedNamesProvider"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>cloak.idea.RenamedIdentifierHighlighterFactory</implementation-class>
        </component>
    </project-components>

    <actions>

            <action id="Cloak.Test" class="cloak.idea.RemapAction" text="Hello" description="Says hello">
                <add-to-group group-id="EditorPopupMenu" anchor="first"/>
                <keyboard-shortcut first-keystroke="alt F2" keymap="$default"/>
            </action>
    </actions>


</idea-plugin>
