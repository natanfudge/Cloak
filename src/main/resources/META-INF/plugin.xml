<idea-plugin>
    <id>Cloak</id>
    <name>Cloak</name>
    <version>${version}</version>
    <vendor>Fudge</vendor>
    <idea-version since-build="190.0" until-build="1000.*"/>

    <description>A cloak made of fabric</description>

    <change-notes>  <![CDATA[]]></change-notes>

    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="ClassNameProvider"/>
        <applicationService serviceImplementation="RenamedNamesProvider"/>
        <applicationService serviceImplementation="cloak.idea.cache.ExistingIntermediaryNamesProvider"/>
        <applicationService serviceImplementation="cloak.platform.saved.ChangesProvider"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>cloak.idea.RenamedIdentifierHighlighterFactory</implementation-class>
        </component>
    </project-components>

    <actions>

        <action id="Cloak.Rename" class="cloak.idea.actions.RenameAction" text="Rename"
                description="Provides a yarn mapping to the target identifier">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut first-keystroke="alt F2" keymap="$default"/>
        </action>

<!--        <group id="org.jetbrains.tutorials.actions.GroupedActions" text="Example Grouped Actions" popup="true">-->
<!--            <add-to-group group-id="ToolsMenu" anchor="after" relative-to-action="org.jetbrains.tutorials.actions.SimpleAction"/>-->
<!--            <action class="org.jetbrains.tutorials.actions.SimplePopDialogAction"-->
<!--                    id="org.jetbrains.tutorials.actions.SimpleGroupedAction" text="A Grouped Action" description="Grouped Action Demo">-->
<!--            </action>-->
<!--        </group>-->
        <group id="Cloak.GlobalMenu" text="Fabric" description="The Fabric main menu" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action class="cloak.idea.actions.SubmitAction" id="Cloak.Submit" text="Submit Mappings"
                    description="Sends a pull request with the renamed mappings to the main Yarn repository">
<!--                <add-to-group group-id="Cloak.GlobalMenu"/>-->
                <keyboard-shortcut first-keystroke="ctrl alt F2" keymap="$default"/>
            </action>
        </group>
    </actions>


</idea-plugin>
