<idea-plugin>
    <id>Cloak</id>
    <name>Cloak</name>
    <version>${version}</version>
    <vendor>Fudge</vendor>
    <idea-version since-build="190.0" until-build="1000.*"/>

    <description>A cloak made of fabric</description>

    <change-notes>  <![CDATA[]]></change-notes>

    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="ClassNameProvider"/>
        <applicationService serviceImplementation="RenamedNamesProvider"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>cloak.idea.RenamedIdentifierHighlighterFactory</implementation-class>
        </component>
    </project-components>

    <actions>

        <action id="Cloak.Rename" class="cloak.idea.RenameAction" text="Rename"
                description="Provides a yarn mapping to the target identifier">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut first-keystroke="alt F2" keymap="$default"/>
        </action>
        <group id="Cloak.GlobalMenu" text="Fabric" description="The Fabric main menu">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action class="cloak.idea.SubmitAction" id="Cloak.Submit" text="Submit Mappings"
                    description="Sends a pull request with the renamed mappings to the main Yarn repository"/>
        </group>
    </actions>


</idea-plugin>
